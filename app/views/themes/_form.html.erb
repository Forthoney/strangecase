<%= form_with model: theme do |form| %>
  <div class="form-element">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% theme.errors.full_messages_for(:name).each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
  </div>

  <div class="form-element">
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% theme.errors.full_messages_for(:description).each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
